<div class="flex items-center">
  <h1 class="font-bold text-3xl">Campaigns</h1>
  <%= link_to 'New Campaign',
              new_campaign_path,
              class: 'ml-auto text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none' %>
</div>

<table class="text-left min-w-full divide-y divide-gray-300 mt-6">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @campaigns.each do |campaign| %>
      <%= content_tag :tr, class: 'campaign', data: {id: campaign.id} do %>
        <td class="py-2"><%= campaign.title %></td>
        <td class="py-2"><%= campaign.status %></td>
        <td class="py-2"><%= link_to 'View',
                        campaign,
                        class: 'text-gray-500 hover:text-gray-800 font-medium text-lg' %>
      <% end %>
    <% end %>
  </tbody>
</table>
